<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/label"
        android:layout_width="@dimen/home_course_label_size"
        android:layout_height="@dimen/home_course_label_size"
        android:layout_marginLeft="@dimen/home_course_label_margin"
        android:background="@drawable/bg_home_course_label"
        android:padding="2dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_course_label" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:background="@drawable/bg_exam_plan_item"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:ignore="NestedWeights,SpUsage">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/exam_plan_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/exam_plan_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exam_plan_text_color"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>